<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_video"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@mipmap/video_default"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/iv_video"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/iv_video"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>

    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/iv_player"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/iv_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_detail"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@id/iv_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_delete"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>